@using Web.Domain.Services
@inject IUserService userService

@{ ViewData["Title"] = "Item"; }

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Item</h3>
    </div>
    <div class="box-body scroll-x">
        <div class="btn-panel">
            @if (userService.CanDisplay("request-item"))
            {
                <button class="btn btn-primary" type="button" id="btnAddItem">
                    <i class="fa fa-plus"></i>
                    Request Item
                </button>
            }
            @if (userService.CanDisplay("request-item"))
            {
                <button class="btn btn-warning" type="button" id="btnEdit">
                    <i class="fa fa-pencil-square-o"></i>
                    Edit Item
                </button>
            }
            @if (userService.CanDisplay("request-item"))
            {
                <button class="btn btn-danger" type="button" id="btnCancel">
                    Cancel
                    <i class="fa fa-times"></i>
                </button>
            }
        </div>
        <table id="gridRequestItem"
               class="table table-striped table-bordered table-hover table-condensed table-nowrap"
               style="width:100%;">
            <thead>
                <tr>
                    <th>Item Group</th>
                    <th>Unit</th>
                    <th>Product Group</th>
                    <th>Sub Group Id</th>
                    <th>Approved</th>
                    <th>Remark</th>
                    <th>Request By</th>
                    <th>Request Date</th>
                    <th>Ax Item</th>
                    <th>Item Name</th>
                    <th>Ax Created Date</th>
                </tr>
                <tr>
                    <th>Item Group</th>
                    <th>Unit</th>
                    <th>Product Group</th>
                    <th>Sub Group Id</th>
                    <th>Status</th>
                    <th>Remark</th>
                    <th>Request By</th>
                    <th>Request Date</th>
                    <th>Ax Item</th>
                    <th>Item Name</th>
                    <th>Ax Created Date</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

