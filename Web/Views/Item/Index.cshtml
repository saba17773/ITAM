                                <input type="text"
                                       name="ItemModel"
                                       id="ItemModel"
                                       autocomplete="off"
                                       class="form-control" />
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="ItemDescription">Description</label>
                                <input type="text"
                                       name="ItemDescription"
                                       id="ItemDescription"
                                       class="form-control"
                                       value="."
                                       autocomplete="off"
                                       required />
                            </div>
                            <div class="form-group">
